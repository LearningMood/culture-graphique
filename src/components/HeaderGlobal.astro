---
// ============================================
// HeaderGlobal.astro - Barre noire fixe en haut
// ============================================
export interface Props {
  logoSrc?: string;
  homeUrl?: string;
}

const { 
  logoSrc = '/favicon-tatziki.svg', 
  homeUrl = '/' 
} = Astro.props;
---

<header class="header-global">
  <div class="header-global__content">
    <a href={homeUrl} class="header-global__logo">
      <img src={logoSrc} alt="Logo" />
    </a>
    
    <button class="header-global__burger" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<style lang="scss">
.header-global {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 50px;
  background: #000;
  z-index: 1000;
  
  &__content {
    height: 100%;
    padding-inline: space(4);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  &__logo {
    height: 30px;
    display: flex;
    align-items: center;
    transition: opacity 0.2s;
    
    &:hover {
      opacity: 0.8;
    }
    
    img {
      height: 100%;
      width: auto;
    }
  }
  
  &__burger {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 4px;
    
    span {
      display: block;
      width: 24px;
      height: 2px;
      background: white;
      transition: all 0.3s;
    }
    
    &:hover span {
      background: #3b82f6;
    }
    
    // Animation burger â†’ X
    &.is-active {
      span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
      }
      span:nth-child(2) {
        opacity: 0;
      }
      span:nth-child(3) {
        transform: rotate(-45deg) translate(6px, -6px);
      }
    }
  }
}
</style>

<script>
  const burger = document.querySelector('.header-global__burger');
  
  burger?.addEventListener('click', () => {
    burger.classList.toggle('is-active');
    // Vous pouvez ajouter ici l'ouverture d'un menu mobile
    console.log('Menu toggle');
  });
</script>