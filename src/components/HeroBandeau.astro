---
// ============================================
// HeroBandeau.astro - Hero full screen
// ============================================
import TocNav from './TocNav.astro';
const offsetTop = 0; // ex: hauteur de ton header fixe (ajuste sinon 0)

export interface Props {
  titre: string;
  baseline?: string;
  bgColor?: string;
  bgImage?: string;
  textColor?: string;
  headerImage?: string;
  toc?: Array<{ depth: number; value: string; id: string }>;
}

const { 
  titre,
  baseline,
  bgColor = '#2d2846',
  bgImage,
  textColor = 'white',
  headerImage,
  toc
} = Astro.props;

const heroStyle = {
  backgroundColor: bgColor,
  color: textColor,
  ...(bgImage && { backgroundImage: `url(${bgImage})` })
};

---
<div data-toc-sentinel style="height: 50px; visibility: hidden;"></div>

<div class="hero-bandeau">
  <TocNav toc={toc} offset={offsetTop} />
  <!-- Bandeau titre 50vh -->
  <div class="hero-bandeau__block" style={heroStyle}>
    <div class="hero-bandeau__content">
      <h1 class="hero-bandeau__titre">{titre}</h1>
      {baseline && <p class="hero-bandeau__baseline">{baseline}</p>}
    </div>
  </div>
  

  {headerImage && (
    <div class="hero-bandeau__visual">
      <img src={headerImage} alt={titre} />
    </div>
  )}
</div>

<style lang="scss">
.hero-bandeau {
  background: $indigo-dark;
//   margin-top: 50px; // Compense le header fixe
  
  &__block {
    color: $indigo;
    height: 50vh;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    background-size: cover;
    background-position: center;
    position: relative;
    padding: 0 space(12);
  }
  
  &__content {
    position: relative;
    z-index: 2;
    // text-align: center;
    padding: space(8);
    max-width: 800px;
  }
  
  &__titre {
    font-size: clamp(2.5rem, 5vw, 5rem);
    font-weight: 300;
    color: $indigo;
    // font-size: 5rem;
    margin: 0;
    line-height: 1;
  }
  
  &__baseline {
    font-size: clamp(1.2rem, 2vw, 1.5rem);
    margin-top: space(4);
    opacity: 0.9;
    line-height: 1.5;
    color: $indigo-light
  }
  
  &__visual {
    height: 70vh;
    overflow: hidden;
    
    img {
     width: 100%;
     height: 100%;
     object-fit: cover;
     object-position: center;
     display: block;  // ‚Üê Important
    }
  }
  
  @include mq-max(md) {
    &__block {
      height: 30vh;
      min-height: 200px;
      padding: space(2);
    }

    &__title {
font-size: 2rem;
  } 
    
    &__visual {
      height: 50vh;
    }
  }
}
</style>