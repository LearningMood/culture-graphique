---
// ============================================
// Images.astro - Grille d'images
// ============================================
export interface Props {
  cols?: 1 | 2 | 3;
  width?: 'narrow' | 'medium' | 'wide' | 'full';  // largeur de la rangÃ©e
  ratio?: string;            // ex. '16/9' (optionnel)
  fit?: 'cover' | 'contain'; // recadrage (optionnel)
}
const { cols = 1, width = 'medium', ratio = null, fit = 'cover' } = Astro.props;

// classes utilitaires
const widthClass = {
  narrow: 'col-narrow',
  medium: 'col-medium',
  wide: 'col-wide',
  full: 'col-full'
}[width];

// Pour cumuler les classes si col-2 ou 3
const colClass = `${widthClass} ${cols > 1 ? `images-${cols}` : ''}`.trim();
---

<!-- <div class={`images ${colClass}`} data-ratio={ratio ?? '4/3'} data-fit={fit}> -->
<div class={`images ${colClass}`} style={`--ratio: ${ratio}; --fit: ${fit}`}>
  <slot />
</div>

